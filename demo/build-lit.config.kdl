build {
	options {
		tsconfig "tsconfig.json"
		baseHref "/lorem/ipsum"
		entryPoints "src/index.html" "src/lib.ts"
	}

	configuration "translated" {
		localize "en" "nl"
	}
}

test {
	options {
		karmaConfig "karma.conf.cjs"
		tsconfig "tsconfig.spec.json"
	}
}

i18n {
	targetLocales "nl" "en"
	interchange {
		format "xliff"
		xliffDir "locale"
	}
}
