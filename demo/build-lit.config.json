{
	"build": {
		"options": {
			"tsconfig": "tsconfig.json",
			"baseHref": "/lorem/ipsum",
			"entryPoints": ["src/index.html", "src/lib.ts"],
			"inlineLitDecorators": true
		},
		"configurations": {
			"translated": {
				"localize": ["en", "nl"]
			}
		}
	},
	"test-legacy": {
		"options": {
			"karmaConfig": "karma.conf.cjs",
			"tsconfig": "tsconfig.spec.json",
			"inlineLitDecorators": true
		}
	},
	"test": {
		"options": {
			"vitestConfig": "vitest.config.js",
			"tsconfig": "tsconfig.spec.json",
			"coverage": true,
			"coverageInclude": ["src/**/*.ts", "src/**/*.js"],
			"coverageExclude": ["**/*.spec.ts", "**/*.vitest.spec.ts"]
		}
	},
	"i18n": {
		"targetLocales": ["nl", "en"],
		"interchange": {
			"format": "xliff",
			"xliffDir": "locale"
		}
	}
}
