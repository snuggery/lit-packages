{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"tsconfig": {
			"type": "string"
		},
		"karmaConfig": {
			"type": "string"
		},
		"inputFiles": {
			"type": "array",
			"items": {"type": "string"}
		},
		"banner": {
			"type": "object",
			"additionalProperties": {"type": "string"}
		},
		"footer": {
			"type": "object",
			"additionalProperties": {"type": "string"}
		},
		"inject": {
			"type": "array",
			"items": {"type": "string"},
			"additionalItems": false
		},
		"target": {
			"type": "array",
			"items": {"type": "string"},
			"additionalItems": false
		},
		"watch": {
			"type": "boolean"
		}
	},
	"required": ["karmaConfig"],
	"additionalProperties": false
}
