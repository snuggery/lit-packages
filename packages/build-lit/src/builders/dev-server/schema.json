{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"browserTarget": {
			"type": "string"
		},
		"host": {
			"type": "string",
			"default": "localhost"
		},
		"port": {
			"type": "number",
			"minimum": 0,
			"maximum": 65536
		},
		"watch": {
			"type": "boolean",
			"default": true
		},
		"localize": {
			"type": "string"
		}
	},
	"required": ["browserTarget"],
	"additionalProperties": false
}
